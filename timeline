    <script>
        const dateInput = document.getElementById('dueDate');
        const container = document.getElementById('timelineContainer');
        const weekDisplay = document.getElementById('weekDisplay');
        
        const dateQual = document.getElementById('dateQual');
        const dateNotice = document.getElementById('dateNotice');
        const dateMatb = document.getElementById('dateMatb');
        const dateLeave = document.getElementById('dateLeave');

        function formatDate(date) {
            const options = { day: 'numeric', month: 'long', year: 'numeric' };
            return date.toLocaleDateString('en-GB', options);
        }

        function calculateDates() {
            if (!dateInput.value) return;

            const due = new Date(dateInput.value);
            container.classList.remove('step-inactive');

            // 1. Qualifying Period (8 weeks ending 15 weeks before due date)
            // End of qualifying period: Sunday of the 15th week before the baby is due.
            // Simplified: (15 * 7) days before due date is the end.
            const endQual = new Date(due);
            endQual.setDate(due.getDate() - (15 * 7));
            
            const startQual = new Date(endQual);
            startQual.setDate(endQual.getDate() - (8 * 7));

            // 2. Notification Deadline (end of 15th week before due date)
            const notifyBy = new Date(endQual);

            // 3. MATB1 (Usually from 20 weeks)
            // Pregnancy is roughly 40 weeks. 20 weeks before due date is halfway.
            const matbFrom = new Date(due);
            matbFrom.setDate(due.getDate() - (20 * 7));

            // 4. Earliest Start (11 weeks before due date)
            const earliestLeave = new Date(due);
            earliestLeave.setDate(due.getDate() - (11 * 7));

            // Update UI
            dateQual.innerText = `${formatDate(startQual)} ‚Äî ${formatDate(endQual)}`;
            dateNotice.innerText = formatDate(notifyBy);
            dateMatb.innerText = formatDate(matbFrom);
            dateLeave.innerText = formatDate(earliestLeave);

            // Helper text
            weekDisplay.innerText = `Dates calculated based on due date: ${formatDate(due)}`;
        }

        dateInput.addEventListener('change', calculateDates);

        // Pre-fill with a date roughly 6 months from now for demo
        const demoDate = new Date();
        demoDate.setMonth(demoDate.getMonth() + 6);
        dateInput.value = demoDate.toISOString().split('T')[0];
        calculateDates();
    </script>
